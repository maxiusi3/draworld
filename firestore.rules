rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own credit transactions
    match /creditTransactions/{transactionId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Users can read and write their own video creations
    match /videoCreations/{creationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // Allow public read for public creations
      allow read: if resource.data.isPublic == true;
    }
    
    // Users can read and write their own payments
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Users can read and write their own referrals
    match /referrals/{referralId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.referrerId || 
         request.auth.uid == resource.data.referredUserId);
    }
    
    // Users can read and write their own social tasks
    match /socialTasks/{taskId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Analytics events can be written by authenticated users
    match /analyticsEvents/{eventId} {
      allow write: if request.auth != null;
      // Only admins can read analytics
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Admin-only collections
    match /adminSettings/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}