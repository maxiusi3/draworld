rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload artwork to their own folder
    match /artwork/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload images to their own folder (legacy)
    match /users/{userId}/images/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload videos to their own folder
    match /users/{userId}/videos/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // General uploads folder for authenticated users
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public videos can be read by anyone
    match /public/videos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Public thumbnails can be read by anyone
    match /public/thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}